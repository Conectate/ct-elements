{
	"compilerOptions": {
		"target": "es2017",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": [
			"esnext.array",
			"esnext",
			"es2017",
			"dom"
		],
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"noUnusedLocals": true,
		"outDir": "./",
		// Only necessary because @types/uglify-js can't find types for source-map
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"importHelpers": true
	},
	"include": [
		"custom_typings/**/*.ts",
		"src/**/*.ts"
	],
	"exclude": []
}