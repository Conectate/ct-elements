{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2020",
		"moduleResolution": "node",
		"useDefineForClassFields": false,
		"lib": [
			"dom"
		],
		"declaration": true,
		"noUnusedLocals": true,
		"outDir": "./",
		// Only necessary because @types/uglify-js can't find types for source-map
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"importHelpers": true
	},
	"include": [
		"custom_typings/**/*.ts",
		"src/**/*.ts"
	],
	"exclude": []
}