{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "lib": [
            "esnext.array",
            "esnext",
            "es2020",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@conectate/components/*": [
                "src/*"
            ]
        },
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "typeRoots": [
            "./demo/src/xconfig/typings"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
        "demo/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}